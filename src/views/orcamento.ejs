<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Rumos Soluções em T.I. - Orçamentos</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- View Port -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link href="/styles/index.css" rel="stylesheet" type="text/css">
    <link href="/styles/orcamento.css" rel="stylesheet" type="text/css">
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@500;700&display=swap" rel="stylesheet">

</head>

<body>
    <header>
        <div>
            <img src="/img/rumos logo50-100 PRETO.jpg" alt="Rumos Soluções em TI">
        </div>
    </header>
    <div class="menu">

        <div>
            <a href="/" class="btna"><img src="/img/home.svg" alt="Inicio">
                <p> Início</p>
            </a>
            <a href="/cadastrocliente" class="btna"><img src="/img/clientes.png" alt="Clientes">
                <p>Cadastro de clientes</p>
            </a>
            <a href="/orcamento" class="btna"><img src="/img/orcamento.svg" alt="Orçamento">
                <p>Orçamento</p>
            </a>
            <a href="/cadastrousuario" class="btna"><img src="/img/usuario.png" alt="Usuário">
                <p>Cadastro de Usuário</p>
            </a>
            <a href="/servicos" class="btna"><img src="/img/servicos.svg" alt="Serviços">
                <p>Serviços</p>
            </a>
        </div>

    </div>
    <form action="#">
        <div class="cliente">
            <h2>Orçamentos</h2>
            <form>
                <button class="btntop">Novo Orçamento</button>
                <button class="btntop">Item Anterior</button>
                <button class="btntop">Item Posterior</button>
                <button class="btntop">Excluir Item</button>
            </form>
            <div class="content">
                <p class="cliente">Peça:</p><input type="text">
            </div>
            <div class="content">
                <p class="cliente">Preço de Compra:</p><input type="text">
            </div>
            <div class="content">
                <p class="cliente">Quantidade:</p><input type="text">
            </div>
            <div class="content">
                <p class="cliente">Margem de Lucro:</p><input type="text">
            </div>
            <div class="content">
                <p class="cliente">Mao de Obra:</p><input type="text">
            </div>
            <div class="content">
                <p class="cliente">Serviços:</p><input type="text">
            </div>
        </div>
    </form>
    <form>
        <button class="btntop">Gravar Orçamento</button>
        <button class="btn">Excluir Orçamento</button>
        <button class="btn">Orçamento Cliente</button>
        <button class="btn">Relatório do Orçamento</button>
        <button class="btn">Consultar Orçamentos</button>
    </form>
</body>

</html>